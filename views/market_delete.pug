extends layout

block content
  h1= title

  p.delete-message Are you sure you want to delete this product?

  div.delete-item-info
    p #[strong Name]: #{market.name}  
    p #[strong Price]: #{market.price}
    p #[strong Usda]: #{market.usda}
    p #[strong Quantity]: #{market.quantity}

  form(method='POST' action='')
    div.delete-form-group
      input#id.form-control(type='hidden', name='id', required='true', value=market._id)
    input(class='submit' type='submit')
