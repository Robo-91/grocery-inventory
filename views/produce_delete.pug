extends layout

block content
  h1= title

  p.delete-message Are you sure you want to delete this Product?

  div.delete-item-info
    p #[strong Name]: #{produce.name}
    p #[strong Price]: #{produce.price}
    p #[strong Type]: #{produce.type}

  form(method='POST' action='')
    div.delete-form-group
      input#id.form-control(type='hidden', name='id', required='true', value=produce._id)
    input(class='submit' type='submit')